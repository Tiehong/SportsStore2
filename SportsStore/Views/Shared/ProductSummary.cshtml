@model Product

<div class="card card-outline-primary m-1 p-1">
	<div class="bg-faded p-1>">
		@if (Model.ImageData != null)
		{
			<div class="pull-left" style="margin-right: 20px">
				<img class="img-thumbnail" width="75" height="75"
					 src="@Url.Action("GetImage","Product", new {Model.ProductID})" />
			</div>
		}
		<h4>
			@Model.Name
			<span class="badge badge-pill badge-primary" style="float:right"><small>@Model.Price.ToString("C")</small></span>
		</h4>
		<form id="@Model.ProductID" asp-action="AddToCart"
			  asp-controller="Cart" method="post">
			<input type="hidden" asp-for="ProductID" />
			<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
			@Model.Description
			<span class="card-text p-1">
				<button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
					Add to Cart
				</button>
			</span>
		</form>
	</div>
</div>